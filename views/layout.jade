html(lang="zh_CN")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title=title
        meta(name='description', content='')
        meta(name='author', content='')
        link(rel='icon', href='../../favicon.ico')
        // Bootstrap core CSS
        link(href='lib/bootstrap-3.3.5/css/bootstrap.min.css', rel='stylesheet')
        // Custom styles for this template
        
        //common css
        link(href='stylesheets/nav.css', rel='stylesheet')
        link(href='stylesheets/common.css', rel='stylesheet')
        
        -if (stylesheets)
            each stylesheet in stylesheets
                link(href='stylesheets/' + stylesheet, rel='stylesheet')       
        // Just for debugging purposes. Don't actually copy these 2 lines!
        //if lt IE 9
            script(src='../../assets/js/ie8-responsive-file-warning.js')
        // HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries
        //if lt IE 9
            script(src='//cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js')
            script(src='//cdn.bootcss.com/respond.js/1.4.2/respond.min.js')
    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            div.container
                div.navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a#logo.navbar-brand(href='/') 阿贵龙门客栈（本网站仅用于临时网页测试！）
                div#navbar.navbar-collapse.collapse
                    -if (!user)
                        form.navbar-form.navbar-right(method='post')
                            label#login-status 
                            div.form-group
                                input.form-control(type='text', placeholder='客官编号', name='num')
                            div.form-group
                                input.form-control(type='password', placeholder='密码', name='password')
                            button.btn.btn-success(type='submit', formaction='/login') 登录
                            a.btn.btn-warning.nav-btn(href='/reg') 注册  
                    -else 
                        div.navbar-form.navbar-right.btn-group
                            div.btn-group
                                button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false') 更多&nbsp&nbsp
                                    span.caret
                                ul.dropdown-menu
                                    li
                                        a(href='user')=user.name
                                    li.divider(role='separator')
                                    li
                                        a(href='/logout') 退出登录                                            
        block content
    div.container
        hr
        footer
            p 在线人数 1231 访问量13514
            p &copy; Kevin.Hu 2016
                
script(src='//cdn.bootcss.com/jquery/1.11.3/jquery.min.js')
script(src='lib/bootstrap-3.3.5/js/bootstrap.min.js')
script(src='javascripts/utils.js')
// script(src='javascripts/login.js')
-if (scripts)
    each script in scripts
        script(src='javascripts/' + script)