extends layout

block content
    script(type='text/javascript', src='lib/angular-1.5.0.js')    
    script(type='text/javascript', src='lib/angular-ui-router-0.2.18.js')
    div(ng-app="userPage" ng-controller="tabController")
        div.container.container-with-padding-top
            div.page-header
                h3=userpage
            ul.nav.nav-tabs.nav-justified
                li(role='presentation', ng-repeat = 'tab in tabs', ui-sref-active='active')
                    a(ui-sref='{{tab.state}}') {{tab.description}}
        div.container
            div(ui-view='')

    script(type='text/javascript', src='userPage/userPage.js')
    script(type='text/javascript', src='userPage/config/userPage.config.js')
    script(type='text/javascript', src='userPage/controllers/userPage.controller.tabController.js')